<link rel="stylesheet" href="/css/formStyles.css">

<div class="container">

    <div class="row">

        <div class="col-10 col-md-8 col-lg-6 bg-white rounded-4 mx-auto" style="height: 70vh;">

            <h1 class="mt-4 mb-3 text-center">Sign In</h1>

            <form action="" class="fs-5" method="post">
                <div class="mt-3">
                    <label class="form-label" for="emp-email">Email</label>
                    <input type="email" id="emp-email" name="empMail" class="form-control">
                </div>

                <div class="mt-3">
                    <label class="form-label" for="emp-password">Password</label>
                    <input type="password" id="emp-password" name="empPassword" class="form-control">
                </div>

                <button type="button" class="btn fs-4 mt-3 d-block mx-auto">Sign In</button>
            </form>

        </div>

    </div>

</div>